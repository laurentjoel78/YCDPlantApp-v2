# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ycd_farmer_guide
# OR use individual variables:
DB_NAME=ycd_farmer_guide
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# Email Service (Brevo/Sendinblue)
BREVO_API_KEY=your-brevo-api-key
SENDER_EMAIL=noreply@yourdomain.com
SENDER_NAME=YCD Farmer Guide

# Cloudinary (Image Uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AI Services
OPENAI_API_KEY=your-openai-api-key
GROQ_API_KEY=your-groq-api-key

# Payment Gateway (NotchPay)
NOTCH_PAY_PUBLIC_KEY=your-notchpay-public-key
NOTCH_PAY_PRIVATE_KEY=your-notchpay-private-key
NOTCH_PAY_WEBHOOK_SECRET=your-webhook-secret

# Security Configuration (NEW)
CSP_REPORT_ONLY=true
SKIP_RATE_LIMIT=false

# Logging Configuration (NEW)
LOG_LEVEL=info
LOG_SQL=false

# Optional: Frontend URL for CORS (not needed for mobile apps)
# FRONTEND_URL=https://your-frontend-domain.com
